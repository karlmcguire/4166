<% include header %>

      <div class="pt-4 pb-2">
        <div class="row">
          <div class="col-8">
            <h2 class="mb-3"><%= data.title %></h2> 
            <p><%= data.details %></p>
            <div class="card mt-5">
              <div class="pt-3 pr-3 pl-3">
                <h4>Are you going?</h4> 
                <p class="text-secondary">
                    <%= data.going %> people are going.
                </p>
              </div>
              <div class="pl-3 pr-3 pb-3">
                <div class="btn-group btn-block" role="group" aria-label="Basic example">
                  <a href="/connection/<%= data.id %>/add/yes" class="btn btn-success">Yes</a>
                  <a href="/connection/<%= data.id %>/add/no" class="btn btn-danger">No</a>
                  <a href="/connection/<%= data.id %>/add/maybe" class="btn btn-primary">Maybe</a>
                </div>
              </div>
            </div>
          </div> 
          <div class="col-4">
            <h4 class="ml-3">About</h4> 
            <p class="ml-3"><%= data.about %></p> 
          </div> 
        </div> 
      </div>

<% include footer %>
