<% include header %>

    <div class="container">
      <nav aria-label="breadcrumb" class="mt-4">
        <ol class="breadcrumb">
          <li><a href="/connections/">Connections</a></li>
        </ol>
      </nav>

      <div class="pt-4 pb-2">
        <div class="row">
        <div class="col">
        <h1 class="text-secondary pb-4">New Connection</h1>
        <form action="/newConnection" method="POST">
            <div class="form-group">
                <label name="topic">Topic</label>
                <input type="text" name="topic" class="form-control" placeholder="Topic">
            </div> 
            <div class="form-group">
                <label name="name">Name</label>
                <input type="text" name="name" class="form-control" placeholder="Name">
            </div> 
            <div class="form-group">
                <label name="description">Description</label>
                <textarea class="form-control" rows="3" name="description" placeholder="Description"></textarea> 
            </div> 
            <div class="form-group">
                <label name="location">Location</label>
                <input type="text" name="location" class="form-control" placeholder="Location">
            </div>
            <div class="form-group">
                <label name="when">When</label>
                <input type="date" name="when" class="form-control" placeholder="When">
            </div>
            <div class="form-group">
                <br>
                <input type="submit" class="btn btn-primary">
            </div>
        </form>
        </div>
        <div class="col"></div>
        </div>
      </div>

<% include footer %>
